unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Classes, Graphics, Controls, Forms, Dialogs,
  StdCtrls, Buttons;

type
  TForm1 = class(TForm)
    BitBtn1: TBitBtn;
    BitBtn2: TBitBtn;
    Edit1: TEdit;
    Edit2: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Edit3: TEdit;
    Edit4: TEdit;
    Edit5: TEdit;
    Edit6: TEdit;
    Label7: TLabel;
    Label8: TLabel;
    Edit7: TEdit;
    Edit8: TEdit;
    Label9: TLabel;
    procedure BitBtn1Click(Sender: TObject);
    procedure BitBtn2Click(Sender: TObject);
  private
    { Private declarations }
  public
     A:Array[1..20]of Real;      {Управляюший момент звена 1}
     B:Array[1..20]of Real;      {Управляюший момент звена 2}
     T:Real;
    { Public declarations }
  end;

var
  Form1: TForm1;
  m1,m2,J1,J2,G1,G2,L:Real;   {Данные}
  S,S1,S2,F,F1,F2:Real;       {Переменные первого рода}
  i:Integer;                  {Счётчик}
  x,K:Real;                   {Переменные второго рода}

implementation

uses Unit2;

{$R *.DFM}

procedure TForm1.BitBtn1Click(Sender: TObject);
begin
    {Ввод данных}
   m1:=StrToFloat(Edit1.Text); m1:=(Int(m1*100))/100; {Масса 1 звена}
   {m2:=StrToFloat(Edit2.Text); m2:=(Int(m2*10))/10; {Масса 1 звена}
   J1:=StrToFloat(Edit3.Text); J1:=(Int(J1*100))/100; {Момент инерции 1 звена}
   J2:=StrToFloat(Edit4.Text); J2:=(Int(J2*100))/100; {Момент инерции 2 звена}
   G1:=StrToFloat(Edit5.Text); G1:=(Int(G1*100))/100; {Начальный угол}
   G2:=StrToFloat(Edit6.Text); G2:=(Int(G2*100))/100; {Конечный угол}
   L:=StrToFloat(Edit7.Text); L:=(Int(L*100))/100;    {Длина звена}
   T:=StrToFloat(Edit8.Text); T:=(Int(T*100))/100;    {Период движения}
    {Окончание ввода данных}
K:=2*pi*(G1+(G2-G1))/360;
               {Начало вычисления управляющих моментов}
For i:=1 To 20 do Begin
    {Переменные второго рода}
  x:=x+T/20;
   {Закон F,F1,F2 (угол поворота звена 2, угловая скорость, угловое ускорение)}
  F:=K*(10-15*x/T+6*sqr(x)/sqr(T))*sqr(x)*x/(sqr(T)*T);
  F1:=K*(30*sqr(x)-60*sqr(x)*x/T+30*sqr(sqr(x))/sqr(T))/(sqr(T)*T);
  F2:=K*(60*x-180*sqr(x)/T+120*sqr(x)*x/sqr(T))/(sqr(T)*T);
    {Зависимость S(угол поворота звена 1) от F (угол поворота звена 2)}
  S:=3.14-2*F;
  S1:=-2*F1;
  S2:=-2*F2;
    {Непосредственное вычисление}
  A[i]:=m1*Sqr(L)*(S2/4+F2*Sin(S/2-F)+F1*Cos(S/2-F)*(S1/2-F1)-F1*S1*Cos(S/2-F)/2)+J1*S2;
  B[i]:=m1*Sqr(L)*(4*F2+S2*Sin(S/2-F)+S1*Cos(S/2-F)*(S1/2-F1)+S1*F1*Cos(S/2-F))+F2*(J1+J2);
End;
    {Окончание вычисления управляющих моментов}
end;

procedure TForm1.BitBtn2Click(Sender: TObject);
begin
Form2.ShowModal;
end;

end.
